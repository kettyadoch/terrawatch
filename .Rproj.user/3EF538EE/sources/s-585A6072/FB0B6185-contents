library(highcharter)

highchart() %>%
  hc_plotOptions(series = list(stacking = 'normal')) %>%
  hc_yAxis_multiples(
    list(min = 0, max = 20),
    list(min = 0, max = 16, opposite = TRUE)
  ) %>% 
  hc_add_series(data = c(1, 2, 3, 4, 5, 6), type = 'area') %>% 
  hc_add_series(data = c(10, 12, 10, 13, 10, 11), type = 'area') %>% 
  hc_add_series(data = c(1, 3, 2, 3, 5, 3), type = 'area', yAxis = 1) %>% 
  hc_add_series(data = c(2, 3, 2, 3, 2, 3), type = 'area', yAxis = 1)
